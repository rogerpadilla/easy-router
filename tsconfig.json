{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
